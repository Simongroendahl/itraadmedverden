---
import "../styles/main.css";
const { title, link } = Astro.props;
---

<a href={link}>
  <div>
    <button>{title}</button>
  </div>
</a>

<style>
  button {
    color: #ffffff;
    background-color: var(--blue);
    cursor: pointer;
    border: none;
    padding-left: 1.8rem;
    padding-top: 0.6rem;
    padding-bottom: 0.6rem;
    padding-right: 1.8rem;
    border-radius: 8px;
    font-size: 1.1rem;
  }

  button:hover {
    background-color: #ffffff;
    border: var(--blue) solid 3px;
    color: var(--blue);
  }
</style>
