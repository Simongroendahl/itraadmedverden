---
import "../styles/main.css";
---

<div class="profile-card">
  <img src="path-to-your-image.jpg" alt="Zoulikha" class="profile-image" />
  <div class="profile-name">Zoulikha</div>
</div>

<style>
  .profile-card {
    width: 300px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    font-family: "Helvetica", "Arial", sans-serif;
    position: relative;
    background-color: white;
  }

  .profile-image {
    width: 100%;
    display: block; /* Remove any space below the image */
  }

  .profile-name {
    font-size: 1.5em;
    text-align: center;
    color: #333;
    padding: 10px 0;
    background-color: #fff;
    position: absolute;
    bottom: 0;
    width: 100%;
  }

  .profile-card::before {
    content: "";
    position: absolute;
    right: 0;
    bottom: 0;
    border-width: 0 70px 70px 0;
    border-style: solid;
    border-color: transparent transparent #ff7a59 transparent;
  }
</style>
